// Day 6/7 Javascript for the four images with text and links on home page
script.
  // Day 6/7 Array for images
  let imgArray = [];
  imgArray[0] = 'images/1_paris.jpg';
  imgArray[1] = 'images/2_maldives.jpg';
  imgArray[2] = 'images/3_venice.jpg';
  imgArray[3] = 'images/4_iceland.jpg';
  // Day 6/7 Array for image titles
  let text = [];
  text[0] = "Paris";
  text[1] = "Maldives";
  text[2] = "Venice";
  text[3] = "Iceland";
  // Day 6/7 Array for image web links
  let linkArray = [];
  linkArray[0] = "https://en.parisinfo.com/";
  linkArray[1] = "https://visitmaldives.com/en";
  linkArray[2] = "https://www.venice-tourism.com/en";
  linkArray[3] = "https://visiticeland.com/";
  // Day 6/7 Functions for image with text and links
  let table_of_imgs = document.getElementById("images_with_descrip");
  let first_row = document.createElement("div");
  first_row.setAttribute("class", "row");
  table_of_imgs.append(first_row);
  for(let i=0; i<imgArray.length; i++)
  {
  let first_row_first_col = document.createElement("div");
  first_row_first_col.setAttribute("class", "col-md-3");
  first_row.append(first_row_first_col);
  let first_row_first_p = document.createElement("p");
  first_row_first_p.setAttribute("class", "text-center");
  first_row_first_p.innerHTML = text[i];
  first_row_first_col.append(first_row_first_p);
  }
  let second_row = document.createElement("div");
  second_row.setAttribute("class", "row");
  table_of_imgs.append(second_row);
  for(let i=0; i<imgArray.length; i++)
  {
  let second_row_first_col = document.createElement("div");
  second_row_first_col.setAttribute("class", "col-md-3 text-center");
  second_row.append(second_row_first_col);
  let first_row_first_img = document.createElement("img");
  first_row_first_img.height = 200;
  first_row_first_img.width = 200;
  first_row_first_img.id = "img" + i;
  first_row_first_img.setAttribute("src", imgArray[i]);
  first_row_first_img.onclick = function()
  {
  window.open(linkArray[i], "", "width=300,height=450");
  };
  second_row_first_col.append(first_row_first_img);
  }
